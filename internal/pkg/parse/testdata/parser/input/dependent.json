{
    "version": "0.1",
    "workflow": {
      "name": "DependentJobs",
      "jobs": {
        "date": {
          "image": "library://alpine:latest",
          "command": [
            "date",
            ">",
            "/data/time"
          ]
        },
        "hello": {
          "image": "library://alpine:latest",
          "command": [
            "echo",
            "-n",
            "Hello, world, the time is $(cat /share/time)"
          ],
          "requires": [
            "date"
          ]
        }
      }
    }
  }